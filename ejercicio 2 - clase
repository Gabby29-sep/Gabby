namespace ConsoleApp22
{
    internal class Introductorio
    {
        public static double potencia(double baseNum, int exponente)
        {
            double resultado = 1;
            for (int i = 0; i <= exponente; i++)
            {
                resultado *= baseNum;
            }
            return resultado;
        }
        public static double factorial(int numero)
        {
            double resultado = 1;
            for (int i = 2; i <= numero; i++)
            {
                resultado *= i;
            }
            return resultado;
        }
    }
}
