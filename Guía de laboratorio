namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string nombre;

            Console.WriteLine("Ingresa tu nombre porfavor: ");
            nombre = Console.ReadLine();

            if (nombre == "David")
            {
                Console.WriteLine("Hola");
            }
            else
            {
                Console.WriteLine("No te conozco");
            }
        }
    }
}
2.-
namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int d;

            Console.WriteLine("Ingresar un numero del 1 al 7: ");
            d = int.Parse(Console.ReadLine());

            switch (d)
            {
                case 1: Console.WriteLine("Lunes");
                    break;
                case 2: Console.WriteLine("Martes");
                    break;
                case 3: Console.WriteLine("Miercoles");
                    break;
                case 4: Console.WriteLine("Jueves");
                    break;
                case 5: Console.WriteLine("Viernes");
                    break;
                case 6: Console.WriteLine("Sabado");
                    break;
                case 7: Console.WriteLine("Domingo");
                    break;

            }
        }
    }
}
3.-
namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            char l;

            Console.WriteLine("Digite una sola tecla: ");
            l = char.Parse (Console.ReadLine());

            switch (l)
            {
                case 'a':
                case 'e':
                case 'i':
                case 'o':
                case 'u':
                    Console.WriteLine("Es una vocal");
                    break;
                case 'b':
                case 'c':
                case 'd':
                case 'f':
                case 'g':
                case 'h':
                case 'j':
                case 'k':
                case 'l':
                case 'm':
                case 'n':
                case 'ñ':
                case 'p':
                case 'q':
                case 'r':
                case 's':
                case 't':
                case 'v':
                case 'w':
                case 'x':
                case 'y':
                case 'z':
                    Console.WriteLine("Es una consonante");
                    break;
                case '1':
                case '2':
                case '3':
                case '4':
                case '5':
                case '6':
                case '7':
                case '8':
                case '9':
                case '0':
                    Console.WriteLine("Es una cifra númerica");
                    break;
            }

            
        }
    }
}
4.-
namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            char e;

            Console.WriteLine("Digite C, S, V, D: ");
            e = char.Parse(Console.ReadLine());

            switch (e)
            {
                case 'C': Console.WriteLine("Casado");
                    break;
                case 'S': Console.WriteLine("Soltero");
                    break;
                case 'V': Console.WriteLine("Viudo");
                    break;
                case 'D': Console.WriteLine("Divorciado");
                    break;

            }

            
        }
    }
}
